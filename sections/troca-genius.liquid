{% style %}

#troca {
 display: grid;
 grid-template-columns: 1fr 1fr;
 max-width: 100%;
 gap: 5%;
 margin: 0%;
}

#troca .image img {
    max-width: 100%;
}

#troca .content {
    margin-right: 50px;
    margin-bottom: 50px;
    font-size: 1.3rem;
}

#troca .content h1 {
    font-size: 2rem;
}

#troca .content p {

}

#troca .content a {
    cursor: pointer;
}

#troca .content a button {
    background-color: #000;
    border-radius: .3em;
    border: none;
    color: #fff;
    padding: 10px 25px;
    font-size: 1.4rem;
    cursor: pointer;
    margin: 10px 0px;
}


#troca .background-image {
    background-image: url('{{section.settings.image |  img_url: 'master'}}');
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

@media (max-width: 800px) {

#troca {
    grid-template-columns: 1fr;
    margin: 0%;
    gap: 2%;
    padding-bottom: 50px;
}

#troca .content {
    margin: 0% 5%;
}

#troca .background-image {
    height: 50vh;
}



}
{% endstyle %}


<div id="troca">
    <div class="image background-image">
        <!--<img src="{{section.settings.image |  img_url: 'master'}}" alt=""/> -->
    </div>
    <div class="content">
        <h1>{{section.settings.title}}</h1>
        <p>{{section.settings.text}}</p>
        {% if section.settings.button_text %}
        <a href="{{section.settings.button_link}}" target="_blank"><button>{{section.settings.button_text}}</button></a>
        {% endif %}
        <p>{{section.settings.text2}}</p>
    </div>
</div>

{% schema %}
    {
        "name": "Seção explicativa",
        "settings": [
            {
                "type": "image_picker",
                "id": "image",
                "label": "Imagem de destaque"
            },
            {
                "type": "text",
                "id": "title",
                "label": "Título da página"
            },
            {
                "type": "richtext",
                "id": "text",
                "label": "Conteúdo da página"
            },
            {
                "type": "richtext",
                "id": "text2",
                "label": "Conteúdo da página após o botão"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Texto do botão"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Link do botão"
            }
        ],
        "blocks": [],
        "presets": [
            {
                "name": "Seção explicativa"
            }
        ]
    }
{% endschema %}