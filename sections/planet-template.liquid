<div id="planet">

{%- for block in section.blocks -%}
    {%- case block.type -%}
      {%- when 'planet_image' -%}
        <div class="imageBanner">
        <img src="{{block.settings.image | image_url: width: 3080}}" />
        </div>
      {% endcase %}
    {% endfor %}
    <div class="content-wrapper">
    {%- for block in section.blocks -%}
      <div class="content-block">
      {%- case block.type -%}
      {%- when 'planet_title' -%}
        <h2>{{block.settings.title}}</h2>
        {%- when 'planet_content' -%}
        <h3>{{block.settings.content_title}}</h3>
        <p>{{block.settings.content_text}}</p>
      {% endcase %}
      </div>
    {% endfor %}
    </div>

{% style %}

#planet {
}


