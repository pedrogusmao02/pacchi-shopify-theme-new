#planet {

}

.imageBanner {

}

#planet .content-wrapper {
  column-count: 2;
  margint-top: 20px;
}


}

{% endstyle %}



</div>


{% schema %}
    {
      "name": "For the Planet",
      "settings": [],
      "blocks": [
        {
          "type": "planet_image",
          "name": "Planet Featured Image",
          "limit": 1,
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Imagem de destaque"
            }
          ]
        },
        {
            "type": "planet_title",
            "name": "Planet intro text",
            "limit": 2,
            "settings": [
            {
                "type": "inline_richtext",
                "label": "Texto introdutório",
                "id": "title"
            }    
            ]
        },
        {
            "type": "planet_content",
            "name": "Planet content",
            "settings": [
            {
                "id": "content_title",
                "type": "inline_richtext",
                "label": "Título da seção"
            },
            {
                "id": "content_text",
                "type": "inline_richtext",
                "label": "Conteúdo da seção"
            }
            ]
        }
      ],
      "presets": [
        {
          "name": "For the Planet",
          "category": "Custom"
        }
      ]
    }
    {% endschema %}